generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  posts     Post[]
}

model Trade {
  id        Int      @id @default(autoincrement())
  symbol    String   @db.VarChar(255)
  date      DateTime 
  action    String
  strategy  String
  qty       String
  price     String
  strikes   String
  value     String
  expiration String
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

enum Role {
  USER
  ADMIN
}

